@model Meta_Ads_World.Models.QrCodeModel

@section Style {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/import.css" />
}


@if (TempData["ShowingMessage"] != null)
{
    <div id="alertmessage" class="alert alert-primary" role="alert">
        @TempData["ShowingMessage"]
    </div>
}

<section class="card-scanner">
    <div class="container">
        <div class="row">
            <div class="col-5 offset-3">
                <div class="qrimage">
                    <img src="/assest/dummy/dummy100X100.png" alt="qrimages" id="qrimageid">
                </div>
            </div>

            <div class="col-4">
                <div class="scanner-form">
                    <form asp-action="qrcodeadd" enctype="multipart/form-data">
                        <div class="scan-form">
                            <label class="py-2">Upload The QR Image</label>
                            <input type="file" class="form-control fs-4" asp-for="fileupload">
                            <input type="hidden" class="form-control fs-4" asp-for="status" value="false">


                            <button class="btn btn-primary my-3 fs-4" type="submit">Submit</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
