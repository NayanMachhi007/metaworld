@model Meta_Ads_World.Models.StateModelList

@{
    Layout = "~/Views/Shared/_admin_layout.cshtml";
}

<section class="brand-main">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="brand-title">
                    <h1 class="heading-subheading">State Add</h1>
                </div>
                <div class="brand-wrapper">
                    <div class="row">

                        <div class="col-6">
                            <form asp-action="stateadd">

                                <div class="brand-title-wrapper">
                                    <div class="brand-title-label d-flex">
                                        <p>State Name</p>                                       
                                    </div>

                                    <div class="input-group mb-3">
                                        <input type="text"  class="form-control" asp-for="statename">
                                    </div>
                                </div>


                                <div class="brand-btn">
                                    <button class="brand-insta-tbn" type="submit">Submit</button>
                                </div>
                            </form>
                        </div>


                       

                    </div>
                </div>

            </div>

        </div>
    </div>

</section>


<section class="table-main">
    <div class="search">
        <input type="search" placeholder="Search" />

        <button class="btn-global">Submit</button>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="table-title">
                    <h3 class="heading-subheading">State List</h3>
                </div>
                <div class="table-wrapper">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>State Id</th>
                                <th>State Name</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var iteam in Model.statelist)
                            {
                                <tr>
                                    <td>@iteam.stateid</td>
                                    <td>@iteam.statename</td>                                   
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>