@model  Meta_Ads_World.Models.InstaPostModelList


@{
    Layout = "~/Views/Shared/_brand_layout.cshtml";

}
<section class="brand-main">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="brand-title">
                    <h1 class="heading-subheading">Instagram Post</h1>
                </div>
                <div class="brand-wrapper">
                    <div class="row">

                        <div class="col-6">
                            <form asp-action="brandinstapostadd">

                                <div class="brand-title-wrapper">
                                    <div class="brand-title-label">
                                        <p>Brand Post Upload</p>
                                    </div>

                                    <div class="input-group mb-3">
                                        <input type="text" class="form-control" id="inputGroupFile02" asp-for="instaposturl">
                                        <label class="input-group-text" for="inputGroupFile02">Please Enter Instagram Post Link</label>
                                    </div>
                                </div>

                                <div class="brand-title-wrapper">
                                    <div class="brand-title-label">
                                        <p>Do you want Increase the Instagram Like?</p>

                                        <span>Instagram Per Post Like Budget :</span> <span id="instalike"> @Model.instalikebudget</span><span> Rs.</span>



                                    </div>
                                    <div class="brand-input form-check form-switch">
                                        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" asp-for="instapostlikestatus">
                                    </div>
                                </div>

                                <div class="brand-title-wrapper">
                                    <div class="brand-title-label">
                                        <p>Do You want Increase the Instagram Comment?</p>

                                        <span>Instagram Per Post Comment Budget :</span> <span id="instacomment">@Model.instacommentbudget </span><span>Rs.</span>


                                    </div>
                                    <div class="brand-input form-check form-switch">


                                        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" asp-for="instapostcommentstatus">

                                    </div>
                                </div>


                                <div class="brand-title-wrapper">
                                    <div class="brand-title-label">
                                        <p>Do you want Increase Instagram Share?</p>

                                        <span>Instagram Per Post Share Budget :</span> <span id="instashare">@Model.instasharebudget </span><span>Rs.</span>


                                    </div>
                                    <div class="brand-input form-check form-switch">

                                        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" asp-for="instagrampostsharestatus">

                                    </div>
                                </div>

                                <div class="brand-title-wrapper">
                                    <div class="brand-title-label">
                                        <p>Do you want increase The Instagram save?</p>

                                        <span>Instagram Per Post Save Budget :</span> <span id="instasave">@Model.instasavebudget </span><span>Rs.</span>

                                    </div>
                                    <div class="brand-input form-check form-switch">

                                        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" asp-for="instapostsavestatus">

                                    </div>
                                </div>


                                <div class="brand-title-wrapper">
                                    <div class="brand-title-label">
                                        <span>Total Budget :</span> <span id="total"></span> <span>Rs.</span>
                                        <p>Brand Post Budget?</p>
                                    </div>
                                    <div>
                                        <input type="text" asp-for="posttotalbudget">                                        
                                    </div>
                                </div>


                                <div class="brand-title-wrapper">
                                    <input class="form-check-input" value="0" type="hidden" role="switch" id="flexSwitchCheckChecked" asp-for="instaposttotallike">
                                    <input class="form-check-input" value="bydefaultcomment" type="hidden" role="switch" id="flexSwitchCheckChecked" asp-for="instapostcomment">

                                </div>

                                <div class="brand-btn">
                                    <button class="brand-insta-tbn" type="submit">Submit</button>
                                </div>
                            </form>
                        </div>


                        <div class="col-6">
                            <div class="brand-animation">
                                <div action="image-main">
                                    <img src="~/assest/feature-image/insta-feature-image.png" alt="instagram feature image" />
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>

        </div>
    </div>

</section>


@section Scripts{
    <script>
     let like = parseInt(document.getElementById("instalike").innerText);
     let comment = parseInt(document.getElementById("instacomment").innerText);
     let share =   parseInt(document.getElementById("instashare").innerText);
     let save =    parseInt(document.getElementById("instasave").innerText);
     let total = like + comment + share + save;  
     
     document.getElementById("total").innerText +=  total;

    </script>
}