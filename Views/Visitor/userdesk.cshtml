                    id: getid,
                    like: getlike,
                    comment:getcomment,
                    share:getshare,
                    save:getsave,
                    userid:getuser,
                },
                success: function (data) {
                    document.getElementById("instalike").innerHTML = data.instaposttotallike + " Like";
                },
                error: function (data) {
                    console.log("Error", data);

                }
            });
