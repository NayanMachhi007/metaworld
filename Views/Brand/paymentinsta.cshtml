@model Meta_Ads_World.Models.BrandPaymentTransactionModel;

@section Style {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/import.css" />
}

<section class="card-scanner">
    <div class="container">
        <div class="row">
            <div class="col-5 offset-3">
                @* <div class="scanner-bg">
                    <div class="code-scanner">
                        <div class="code-image"> *@
                <img src="~/@Model.qrpath" alt="QR Code"
                     onclick="document.getElementById('scannerid').click()">
                <input type="file" id="scannerid" style="display: none;">
                @*  </div>
                    </div>
                </div>

                <div class="scan-heading">
                    <h4>Scan The QR Code</h4>

                    <h5>And Enjoy Our Service</h5>
                </div> *@
            </div>

            <div class="col-4">
                <div class="scanner-form">
                    <form asp-action="paymentinsta" enctype="multipart/form-data">
                        <div class="scan-form">
                            <label class="py-2">Please Share The Payment Reciept</label>
                            <input type="file" class="form-control fs-4" asp-for="uploadfile">
                            <input type="hidden" asp-for="paymentinstaid" />


                            <label class="mt-2">Please Enter The Transcation ID</label>
                            <input type="text" class="form-control fs-4" asp-for="transcationid">


                            <label class="mt-2">Please Enter The Mobile No</label>
                            <input type="text" class="form-control fs-4" asp-for="contactno">

                            <button class="btn btn-primary my-3 fs-4" type="submit">Submit</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>